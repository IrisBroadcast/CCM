@using CCM.Core.Entities
@{
    ViewBag.Title = "Delete";
    var logCount = ViewBag.LogCount as IList<LogInfo>;
    int nrOfRowsToDelete = ViewBag.nrOfRowsToDelete; 
}

<h2>Rensa loggen</h2>

<hr />


<div class="row">
    <nav class="navbar navbar-default ccm-sub-navbar--admin" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header ccm-sub-navbar--admin--header">
                <span class="navbar-brand">Clean up log</span>
            </div>
            <div class="navbar ccm-sub-navbar--admin--links">
                <ul class="nav navbar-nav nav-pills ccm-sub-navbar--admin--ul">
                    <li>@Html.ActionLink("Log", "Index", "Log")</li>
                    <li>@Html.ActionLink("Change log level", "Level", "Log")</li>
                </ul>
            </div>
        </div>
    </nav>
</div>
<div>Just nu i loggen</div>
<br/>
<table style="width: 400px;">
    <tr>
        <th style="width: 33%">Applikation</th>
        <th style="width: 33%">Antal rader</th>
        <th style="width: 33%">Äldst</th>
    </tr>
    @foreach (var logInfo in logCount)
    {
        <tr>
            <td>@logInfo.Application</td>
            <td>@logInfo.Count</td>
            <td>@logInfo.MinDate</td>
        </tr>
    }
</table>

<br/>

@using (Html.BeginForm("Delete", "Log", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        <div class="col-md-9">
            Number of rows to delete:
            <input type="text" name="nrOfRowsToDelete" value="@nrOfRowsToDelete">
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-9">
            <button type="submit" class="btn btn-primary">Clear log</button>
        </div>
    </div>
}
