@{
    ViewBag.Title = "Who Am I";
}

<div class="row">
    <nav class="navbar navbar-default ccm-sub-navbar--admin" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header ccm-sub-navbar--admin--header">
                <span class="navbar-brand">Who Am I</span>
            </div>
            <div class="navbar ccm-sub-navbar--admin--links">
                <ul class="nav navbar-nav nav-pills ccm-sub-navbar--admin--ul">
                    <li>@Html.ActionLink(Resources.Logs_Link_Debugging, "Index", "Debugging", new { }, new { })</li>
                    <li>@Html.ActionLink("Get CCM Users", "GetCCMUsers", "Debugging", new { }, new { })</li>
                    <li>@Html.ActionLink("Get SIP Accounts", "GetSipAccounts", "Debugging", new { }, new { })</li>
                    <li class="active">@Html.ActionLink("Who Am I", "WhoAmI", "Debugging", new { }, new { })</li>
                    <li>@Html.ActionLink("Cache info", "CacheInfo", "Debugging", new { }, new { })</li>
                </ul>
            </div>
        </div>
    </nav>
</div>

<div class="row">

    @if (Request.IsAuthenticated)
    {
        <div>
            Logged in as @User.Identity.Name
        </div>
        <div>
            Admin: @User.IsInRole("Admin")
        </div>
    }
    else
    {
        <div>Logged out</div>
    }

</div>